<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorWhiteBk">

        <com.so.scrollpicker.ui.view.SPView
            android:id="@+id/sp_hour"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="@dimen/hundred_sixty_dp" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sp_hour"
            android:text="@string/hour"
            android:textColor="@color/colorLevelTxt"
            android:textSize="@dimen/twenty_six_sp"
            android:textStyle="bold" />

        <com.so.scrollpicker.ui.view.SPView
            android:id="@+id/sp_min"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="@dimen/hundred_sixty_dp"
            android:layout_toRightOf="@id/tv_level" />

        <TextView
            android:id="@+id/tv_level_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sp_min"
            android:text="@string/minute"
            android:textColor="@color/colorLevelTxt"
            android:textSize="@dimen/twenty_six_sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
